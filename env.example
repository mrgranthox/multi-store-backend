# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/multistore?schema=backend"
DATABASE_HOST="localhost"
DATABASE_PORT=5432
DATABASE_NAME="multistore"
DATABASE_USERNAME="postgres"
DATABASE_PASSWORD="postgres"
DATABASE_SSL=false

# Server Configuration
PORT=4000
NODE_ENV=development
HOST=0.0.0.0

# JWT Secrets (Generate strong secrets for production)
JWT_ACCESS_SECRET="your-super-secret-access-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
ACCESS_TOKEN_EXPIRES_IN="15m"
REFRESH_TOKEN_EXPIRES_IN="30d"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# Strapi Integration
STRAPI_BASE_URL="http://localhost:1337"
STRAPI_WEBHOOK_SECRET="webhook-secret-key-12345"

# Webhook Security
WEBHOOK_SECRET="webhook-secret-key-12345"

# Admin Dashboard Integration
ADMIN_DASHBOARD_URL="http://localhost:3000"

# Reservation TTL
RESERVATION_TTL_MINUTES=15

# Monitoring
SENTRY_DSN="your-sentry-dsn-here"

# Google Maps (for geospatial queries)
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Payment Provider
PAYMENT_PROVIDER_KEY="your-payment-provider-key"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=120
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_ATTEMPTS=10
